    <![endif]-->
</head>
<body>

<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <h1>Produtos</h1>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-offset-2 col-md-2">
            <div class="list-group">
                <a href="{{ path('produtos') }}" class="list-group-item {% block opc1 %}{% endblock %}">Listar</a>
                <a href="{{ path('adicionar') }}" class="list-group-item {% block opc2 %}{% endblock %}">Adicionar</a>
            </div>

        </div>
        <div class="col-md-6">
            {% block conteudo %}{% endblock %}
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="{{ app.request.basepath }}/js/bootstrap.min.js"></script>
